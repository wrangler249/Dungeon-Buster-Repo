<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>SplashScreen</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">SplashScreen</param>
                    <param id="2" name="Loop">0</param>
                    <param id="3" name="Volume">0</param>
                    <param id="1" name="Tag (optional)">&quot;Music&quot;</param>
                </action>
                <action id="-16" name="Set opacity" type="MainLogo">
                    <param id="0" name="Opacity">0</param>
                </action>
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">7.5</param>
                </action>
                <action id="-16" name="Set opacity" type="MainLogo">
                    <param id="0" name="Opacity">100</param>
                </action>
                <action behavior="Fade" id="1" name="Start fade" type="MainLogo" />
                <action id="-16" name="Wait" type="System">
                    <param id="0" name="Seconds">6.5</param>
                </action>
                <action id="-25" name="Go to layout (by name)" type="System">
                    <param id="0" name="Layout">&quot;Tomb_Dream&quot;</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
