                                        </action>
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;TD_Door3&quot;</param>
                                        </condition>
                                    </conditions>
