<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>DoorKey Mechanic</name>
    <events>
        <event-group collapsed="1" description="" title="Check for unlocked doors">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-group description="" title="Check Test Dungeon">
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;TD_Door1&quot;</param>
                                        </condition>
                                        <condition id="-8" name="Compare two values" type="System">
                                            <param id="0" name="First value">WebStorage.SessionValue(&quot;TD_Door1&quot;)</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Second value">&quot;opened&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="WoodenDoor" />
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;TD_Door2&quot;</param>
                                        </condition>
                                        <condition id="-8" name="Compare two values" type="System">
                                            <param id="0" name="First value">WebStorage.SessionValue(&quot;TD_Door2&quot;)</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Second value">&quot;opened&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="WoodenDoor" />
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;TD_Door3&quot;</param>
                                        </condition>
                                        <condition id="-8" name="Compare two values" type="System">
                                            <param id="0" name="First value">WebStorage.SessionValue(&quot;TD_Door3&quot;)</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Second value">&quot;opened&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="WoodenDoor" />
                                    </actions>
                                </event-block>
                            </sub-events>
                        </event-group>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Door &amp; Key Mechanic">
            <sub-events>
                <event-block collapsed="1">
                    <conditions>
                        <condition id="0" name="On collision with another object" type="WoodenDoor">
                            <param id="0" name="Object">Buster</param>
                        </condition>
                        <condition id="-14" name="Compare variable" type="System">
                            <param id="0" name="Variable">DungeonKeyCount</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-group description="" title="Test Dungeon">
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;TD_Door1&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="WoodenDoor" />
