<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>DoorKey Mechanic</name>
    <events>
        <event-group description="" title="Check for unlocked doors">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Doors</param>
                        </condition>
                        <condition id="4" name="Session key exists" type="WebStorage">
                            <param id="0" name="Key">Doors.Door_ID</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-8" name="Compare two values" type="System">
                                    <param id="0" name="First value">Webstorage.SessionValue(Doors.Door_ID)</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Second value">&quot;Opened&quot;</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Destroy" type="Doors" />
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="Door &amp; Key Mechanic">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Buster">
                            <param id="0" name="Object">Doors</param>
                        </condition>
                        <condition id="-14" name="Compare variable" type="System">
                            <param id="0" name="Variable">DungeonKeyCount</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">0</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Play" type="Audio">
                            <param id="0" name="Audio file">LA_Chest_Open</param>
                            <param id="2" name="Loop">0</param>
                            <param id="3" name="Volume">0</param>
                            <param id="1" name="Tag (optional)">&quot;SFX&quot;</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-group description="" title="Algar&apos;s Tomb">
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="Doors">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;AlgarsTomb_Door01&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="Doors" />
                                        <action id="-11" name="Subtract from" type="System">
                                            <param id="0" name="Variable">DungeonKeyCount</param>
                                            <param id="1" name="Value">1</param>
                                        </action>
                                        <action id="1" name="Set session value" type="WebStorage">
                                            <param id="0" name="Key">&quot;AlgarsTomb_Door01&quot;</param>
                                            <param id="1" name="Value">&quot;Opened&quot;</param>
                                        </action>
                                    </actions>
                                </event-block>
                            </sub-events>
                        </event-group>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
