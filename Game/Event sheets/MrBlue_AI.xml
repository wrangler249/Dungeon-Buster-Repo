                                    <param id="2" name="Second value">96</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">Wandering</param>
                                    <param id="1" name="Value">0</param>
                                </action>
                            </actions>
