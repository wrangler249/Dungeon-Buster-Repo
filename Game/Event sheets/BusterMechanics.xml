<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>BusterMechanics</name>
    <events>
        <variable comment="Buster&apos;s current level (starts at 1)" name="busterCurrentLevel" type="number">1</variable>
        <variable comment="The total EXP required to reach the next level." name="busterNextLvlEXP" type="number">50</variable>
        <variable comment="Buster&apos;s total EXP at any given time." name="busterTotalEXP" type="number">0</variable>
        <variable comment="Total health Buster can have at any given time." name="busterTotalHealth" type="number">125</variable>
        <variable comment="Actual health at any given time" name="busterHealthPerTick" type="number">125</variable>
        <event-group collapsed="1" description="" title="Cheat Buttons">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">76 (L)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Add to" type="System">
                            <param id="0" name="Variable">busterTotalEXP</param>
                            <param id="1" name="Value">5</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="HUD Text Settings">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Set text" type="HP_Text">
                            <param id="0" name="Text">busterHealthPerTick &amp;&quot;/&quot; &amp; busterTotalHealth</param>
                        </action>
                        <action id="0" name="Set text" type="EXP_Text">
                            <param id="0" name="Text">busterTotalEXP</param>
                        </action>
                        <action id="0" name="Set text" type="CurrentLevel_Text">
                            <param id="0" name="Text">busterCurrentLevel</param>
                        </action>
                        <action id="0" name="Set text" type="NextLvLEXP_Text">
                            <param id="0" name="Text">busterNextLvlEXP</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Levelling Formulae">
            <sub-events>
                <event-block collapsed="1">
                    <conditions>
                        <condition id="-14" name="Compare variable" type="System">
                            <param id="0" name="Variable">busterCurrentLevel</param>
                            <param id="1" name="Comparison">3</param>
                            <param id="2" name="Value">10</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-14" name="Compare variable" type="System">
                                    <param id="0" name="Variable">busterTotalEXP</param>
                                    <param id="1" name="Comparison">5</param>
                                    <param id="2" name="Value">busterNextLvlEXP</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-10" name="Add to" type="System">
                                    <param id="0" name="Variable">busterCurrentLevel</param>
                                    <param id="1" name="Value">1</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">busterNextLvlEXP</param>
                                    <param id="1" name="Value">int(busterTotalEXP+(busterTotalEXP*0.5))</param>
                                </action>
                                <action id="-10" name="Add to" type="System">
                                    <param id="0" name="Variable">busterTotalHealth</param>
                                    <param id="1" name="Value">int(busterCurrentLevel*15.575)</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">busterHealthPerTick</param>
                                    <param id="1" name="Value">busterTotalHealth</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <event-block collapsed="1">
                    <conditions>
                        <condition id="-14" name="Compare variable" type="System">
                            <param id="0" name="Variable">busterCurrentLevel</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Value">10</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-14" name="Compare variable" type="System">
                                    <param id="0" name="Variable">busterTotalEXP</param>
                                    <param id="1" name="Comparison">5</param>
                                    <param id="2" name="Value">busterNextLvlEXP</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-10" name="Add to" type="System">
                                    <param id="0" name="Variable">busterCurrentLevel</param>
                                    <param id="1" name="Value">1</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">busterNextLvlEXP</param>
                                    <param id="1" name="Value">int(busterTotalEXP+(busterTotalEXP*0.15))</param>
                                </action>
                                <action id="-10" name="Add to" type="System">
                                    <param id="0" name="Variable">busterTotalHealth</param>
                                    <param id="1" name="Value">int(busterCurrentLevel*15.575)</param>
                                </action>
                                <action id="-9" name="Set value" type="System">
                                    <param id="0" name="Variable">busterHealthPerTick</param>
                                    <param id="1" name="Value">busterTotalHealth</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
