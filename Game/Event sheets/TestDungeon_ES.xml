<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>TestDungeon_ES</name>
    <events>
        <include>TD_Dialogue_Signs</include>
        <include>Master Reference</include>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action id="-18" name="Set layer opacity" type="System">
                    <param id="0" name="Layer">2</param>
                    <param id="1" name="Opacity">0</param>
                </action>
                <action id="0" name="Play" type="Audio">
                    <param id="0" name="Audio file">bitboy_perilous-descent</param>
                    <param id="2" name="Loop">1</param>
                    <param id="1" name="Tag (optional)">&quot;music&quot;</param>
                </action>
                <action id="3" name="Set volume" type="Audio">
                    <param id="0" name="Tag">&quot;music&quot;</param>
                    <param id="1" name="dB">-5</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-3" name="On end of layout" type="System" />
            </conditions>
            <actions>
                <action id="6" name="Stop" type="Audio">
                    <param id="0" name="Tag">&quot;music&quot;</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
