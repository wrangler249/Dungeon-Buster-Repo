<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>WanderingNPCs</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-11" name="For Each" type="System">
                    <param id="0" name="Object">WanderingNPCs</param>
                </condition>
            </conditions>
            <actions />
            <sub-events>
                <variable comment="Is the enemy wandering?" name="Wandering" type="number">1</variable>
                <event-block>
                    <conditions>
                        <condition id="-21" name="Is between values" type="System">
                            <param id="0" name="Value">WanderingNPCs.Bullet.AngleOfMotion</param>
                            <param id="1" name="Lower bound">-179</param>
                            <param id="2" name="Upper bound">-90</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="7" name="Set mirrored" type="WanderingNPCs">
                            <param id="0" name="State">0</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-21" name="Is between values" type="System">
                            <param id="0" name="Value">WanderingNPCs.Bullet.AngleOfMotion</param>
                            <param id="1" name="Lower bound">91</param>
                            <param id="2" name="Upper bound">179</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="7" name="Set mirrored" type="WanderingNPCs">
                            <param id="0" name="State">0</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-21" name="Is between values" type="System">
                            <param id="0" name="Value">WanderingNPCs.Bullet.AngleOfMotion</param>
                            <param id="1" name="Lower bound">1</param>
                            <param id="2" name="Upper bound">90</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="7" name="Set mirrored" type="WanderingNPCs">
                            <param id="0" name="State">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-21" name="Is between values" type="System">
                            <param id="0" name="Value">WanderingNPCs.Bullet.AngleOfMotion</param>
                            <param id="1" name="Lower bound">-90</param>
                            <param id="2" name="Upper bound">-1</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="7" name="Set mirrored" type="WanderingNPCs">
                            <param id="0" name="State">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Set text" type="Text">
                            <param id="0" name="Text">WanderingEnemies.Bullet2.AngleOfMotion</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-14" name="Compare variable" type="System">
                            <param id="0" name="Variable">Wandering</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">1</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-6" name="Every X seconds" type="System">
                                    <param id="0" name="Interval (seconds)">1 + int(random(2))</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action behavior="Bullet" id="5" name="Set enabled" type="WanderingNPCs">
                                    <param id="0" name="State">0</param>
                                </action>
                                <action id="-16" name="Wait" type="System">
                                    <param id="0" name="Seconds">1</param>
                                </action>
                                <action behavior="Bullet" id="5" name="Set enabled" type="WanderingNPCs">
                                    <param id="0" name="State">1</param>
                                </action>
                                <action behavior="Bullet" id="3" name="Set angle of motion" type="WanderingNPCs">
                                    <param id="0" name="Angle">int(random(-180,180))</param>
                                </action>
                                <action behavior="Bullet" id="0" name="Set speed" type="WanderingNPCs">
                                    <param id="0" name="Speed">25</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="-24" name="Move to top" type="WanderingNPCs" />
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="WanderingNPCs">
                    <param id="0" name="Object">CollisionBox</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Bullet" id="3" name="Set angle of motion" type="WanderingNPCs">
                    <param id="0" name="Angle">WanderingNPCs.Bullet.AngleOfMotion-180</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
