<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>ChestMechanic</name>
    <events>
        <variable comment="The amount of gold in Buster&apos;s possession." name="busterTotalGold" type="number">0</variable>
        <variable comment="Amount of Dungeon Keys obtained" name="DungeonKeyCount" type="number">0</variable>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
                <condition id="-7" name="Compare instance variable" type="5gold">
                    <param id="0" name="Instance variable">Chest_ID</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">&quot;BH_1&quot;</param>
                </condition>
                <condition id="-8" name="Compare two values" type="System">
                    <param id="0" name="First value">WebStorage.SessionValue(&quot;BH_1&quot;)</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Second value">&quot;opened&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Spawn another object" type="5gold">
                    <param id="0" name="Object">NormalChestOpen</param>
                    <param id="1" name="Layer">0</param>
                    <param id="2" name="Image point">0</param>
                </action>
                <action id="-3" name="Set position" type="5gold">
                    <param id="0" name="X">-100</param>
                    <param id="1" name="Y">-100</param>
                </action>
            </actions>
        </event-block>
        <event-group collapsed="1" description="" title="Key for wooden/standard door">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="Buster">
                            <param id="0" name="Object">Key</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">69 (E)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-9" name="Destroy" type="Key" />
                                <action id="0" name="Play" type="Audio">
                                    <param id="0" name="Audio file">LA_Chest_Open</param>
                                    <param id="2" name="Loop">0</param>
                                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                                </action>
                                <action id="0" name="Spawn another object" type="Key">
                                    <param id="0" name="Object">NormalChestOpen</param>
                                    <param id="1" name="Layer">0</param>
                                    <param id="2" name="Image point">0</param>
                                </action>
                                <action id="-16" name="Wait" type="System">
                                    <param id="0" name="Seconds">0.5</param>
                                </action>
                                <action id="0" name="Play" type="Audio">
                                    <param id="0" name="Audio file">pickup_sound</param>
                                    <param id="2" name="Loop">0</param>
                                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                                </action>
                                <action id="-10" name="Add to" type="System">
                                    <param id="0" name="Variable">DungeonKeyCount</param>
                                    <param id="1" name="Value">1</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Key" />
                        <action id="0" name="Spawn another object" type="Key">
                            <param id="0" name="Object">NormalChestOpen</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="Image point">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="5 Gold">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="Buster">
                            <param id="0" name="Object">5gold</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">69 (E)</param>
                                </condition>
                                <condition id="-7" name="Compare instance variable" type="5gold">
                                    <param id="0" name="Instance variable">Chest_ID</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">&quot;BH_1&quot;</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="1" name="Set session value" type="WebStorage">
                                    <param id="0" name="Key">&quot;BH_1&quot;</param>
                                    <param id="1" name="Value">&quot;opened&quot;</param>
                                </action>
                                <action id="0" name="Play" type="Audio">
                                    <param id="0" name="Audio file">LA_Chest_Open</param>
                                    <param id="2" name="Loop">0</param>
                                    <param id="1" name="Tag (optional)">&quot;&quot;</param>
                                </action>
                                <action id="0" name="Spawn another object" type="5gold">
