<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Puzzles</name>
    <events>
        <event-block collapsed="1">
            <conditions>
                <condition id="0" name="On key pressed" type="Keyboard">
                    <param id="0" name="Key">69 (E)</param>
                </condition>
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="Buster">
                            <param id="0" name="Object">PuzzleBox</param>
                        </condition>
                        <condition id="-9" inverted="1" name="Layer is visible" type="System">
                            <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                        </condition>
                        <condition id="-4" name="Trigger once while true" type="System" />
                    </conditions>
                    <actions>
                        <action id="-16" name="Wait" type="System">
                            <param id="0" name="Seconds">0.1</param>
                        </action>
                        <action id="-4" name="Set layer visible" type="System">
                            <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                            <param id="1" name="Visibility">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="1" name="Is overlapping another object" type="Buster">
                            <param id="0" name="Object">PuzzleBox</param>
                        </condition>
                        <condition id="-9" name="Layer is visible" type="System">
                            <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-4" name="Set layer visible" type="System">
                            <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                            <param id="1" name="Visibility">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" inverted="1" name="Is overlapping another object" type="Buster">
                    <param id="0" name="Object">PuzzleBox</param>
                </condition>
                <condition disabled="1" id="-9" name="Layer is visible" type="System">
                    <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action id="-4" name="Set layer visible" type="System">
                    <param id="0" name="Layer">&quot;Puzzle&quot;</param>
                    <param id="1" name="Visibility">0</param>
                </action>
                <action id="-10" name="Set value" type="CombinationPuzzleText">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">0</param>
                </action>
            </actions>
        </event-block>
        <comment>Set the puzzle_ID to the relevant puzzle box&apos;s puzzle_ID</comment>
        <event-block>
            <conditions>
                <condition id="1" name="Is overlapping another object" type="Buster">
                    <param id="0" name="Object">PuzzleBox</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="CombinationPuzzleText">
                    <param id="0" name="Instance variable">Puzzle_ID</param>
                    <param id="1" name="Value">PuzzleBox.Puzzle_ID</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-22" name="Else" type="System" />
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="CombinationPuzzleText">
                    <param id="0" name="Instance variable">Puzzle_ID</param>
                    <param id="1" name="Value">&quot;None&quot;</param>
                </action>
            </actions>
        </event-block>
        <comment>Add 1 to each combination value when it is left clicked</comment>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">CombinationNumber1</param>
                </condition>
            </conditions>
            <actions>
                <action id="-11" name="Add to" type="CombinationNumber1">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">CombinationNumber2</param>
                </condition>
            </conditions>
            <actions>
                <action id="-11" name="Add to" type="CombinationNumber2">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">CombinationNumber3</param>
                </condition>
            </conditions>
            <actions>
                <action id="-11" name="Add to" type="CombinationNumber3">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">1</param>
                </action>
            </actions>
        </event-block>
        <comment>Set the combination numbers every tick</comment>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="0" name="Set text" type="CombinationNumber1">
                    <param id="0" name="Text">CombinationNumber1.Number</param>
                </action>
                <action id="0" name="Set text" type="CombinationNumber2">
                    <param id="0" name="Text">CombinationNumber2.Number</param>
                </action>
                <action id="0" name="Set text" type="CombinationNumber3">
                    <param id="0" name="Text">CombinationNumber3.Number</param>
                </action>
            </actions>
        </event-block>
        <comment>Reset the combination numbers to zero when they reach ten</comment>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="CombinationNumber1">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">10</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="CombinationNumber1">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="CombinationNumber2">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">10</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="CombinationNumber2">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="CombinationNumber3">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">10</param>
                </condition>
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="CombinationNumber3">
                    <param id="0" name="Instance variable">Number</param>
                    <param id="1" name="Value">0</param>
                </action>
            </actions>
        </event-block>
        <comment>Defining puzzle solved conditions</comment>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="CombinationPuzzleText">
                    <param id="0" name="Instance variable">Puzzle_ID</param>
                    <param id="1" name="Comparison">1</param>
                    <param id="2" name="Value">&quot;None&quot;</param>
                </condition>
                <condition id="1" name="Is overlapping another object" type="Buster">
                    <param id="0" name="Object">PuzzleBox</param>
                </condition>
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-7" name="Compare instance variable" type="PuzzleBox">
                            <param id="0" name="Instance variable">Puzzle_ID</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">&quot;testPuzzle01&quot;</param>
                        </condition>
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-7" name="Compare instance variable" type="CombinationNumber1">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">2</param>
                                </condition>
                                <condition id="-7" name="Compare instance variable" type="CombinationNumber2">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">4</param>
                                </condition>
                                <condition id="-7" name="Compare instance variable" type="CombinationNumber3">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Value">9</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-15" name="Set visible" type="PuzzleSolvedIcon">
                                    <param id="0" name="Visibility">1</param>
                                </action>
                                <action id="1" name="Set session value" type="WebStorage">
                                    <param id="0" name="Key">&quot;testPuzzle01&quot;</param>
                                    <param id="1" name="Value">&quot;solved&quot;</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-8" name="Compare two values" type="System">
                                    <param id="0" name="First value">WebStorage.SessionValue(&quot;testPuzzle01&quot;)</param>
                                    <param id="1" name="Comparison">0</param>
                                    <param id="2" name="Second value">&quot;solved&quot;</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-15" name="Set visible" type="PuzzleSolvedIcon">
                                    <param id="0" name="Visibility">1</param>
                                </action>
                                <action id="-10" name="Set value" type="CombinationNumber1">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Value">2</param>
                                </action>
                                <action id="-10" name="Set value" type="CombinationNumber2">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Value">4</param>
                                </action>
                                <action id="-10" name="Set value" type="CombinationNumber3">
                                    <param id="0" name="Instance variable">Number</param>
                                    <param id="1" name="Value">9</param>
                                </action>
                            </actions>
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="-7" name="Compare instance variable" type="WoodenDoor">
                                            <param id="0" name="Instance variable">Door_ID</param>
                                            <param id="1" name="Comparison">0</param>
                                            <param id="2" name="Value">&quot;CombatArenaDoor1&quot;</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-9" name="Destroy" type="WoodenDoor" />
                                    </actions>
                                </event-block>
                            </sub-events>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="CombinationPuzzleText">
                    <param id="0" name="Instance variable">Puzzle_ID</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">&quot;None&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action id="-15" name="Set visible" type="PuzzleSolvedIcon">
                    <param id="0" name="Visibility">0</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="4" inverted="1" name="Session key exists" type="WebStorage">
                            <param id="0" name="Key">&quot;testPuzzle01&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="1" name="Set session value" type="WebStorage">
                            <param id="0" name="Key">&quot;testPuzzle01&quot;</param>
                            <param id="1" name="Value">&quot;unsolved&quot;</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
    </events>
</c2eventsheet>
